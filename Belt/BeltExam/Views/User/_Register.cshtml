@model User

<form asp-controller="User" asp-action="Register" method="POST" class="card-body bg-dark text-light rounded">

    <h2 class="text-primary text-decoration-underline fw-bold fs-1">Register</h2>

    <div class="form-group card-body">
        <label asp-for="Username">Username:</label>
        <span asp-validation-for="Username" class="text-danger font-weight-bold"></span>
        <input asp-for="Username" class="form-control"
            placeholder="please enter your Username...">
    </div>

    <div class="form-group card-body">
        <label asp-for="Email">Email:</label>
        <span asp-validation-for="Email" class="text-danger font-weight-bold"></span>
        <input asp-for="Email" class="form-control"
            placeholder="please enter your email...">
    </div>

    <div class="form-group card-body">
        <label asp-for="Password">Password:</label>
        <span asp-validation-for="Password" class="text-danger font-weight-bold"></span>
        <input asp-for="Password" class="form-control"
            placeholder="please create your password...">
    </div>

    <div class="form-group card-body">
        <label asp-for="PasswordConfirm">Confirm Password:</label>
        <span asp-validation-for="PasswordConfirm" class="text-danger font-weight-bold"></span>
        <input asp-for="PasswordConfirm" class="form-control"
            placeholder="please re-enter your password...">
    </div>

    <br>

    <div class="container">
        <div class="btn border-info">
            <button class="btn btn-outline-info shadow btn-lg cards">Register</button>
        </div>
    </div>

</form>
